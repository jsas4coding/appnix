{
  "name": "appnix",
  "version": "0.1.0",
  "description": "Convert websites to Linux desktop AppImages",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "setup": "tsc && tsc-alias && node dist/scripts/setup.js && rimraf dist",
    "build": "tsc && tsc-alias && node dist/builder/build.js && rimraf dist",
    "clean": "rimraf dist",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "test": "vitest run --watch=false tests/unit",
    "test:coverage": "vitest run --watch=false tests/unit --coverage",
    "test:e2e": "vitest run --watch=false tests/e2e",
    "test:watch": "vitest watch tests/unit"
  },
  "dependencies": {
    "electron-builder": "^24.6.4",
    "handlebars": "^4.7.8",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^24.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.0"
  }
}
